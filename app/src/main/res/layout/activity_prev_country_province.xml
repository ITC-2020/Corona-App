<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrevCountryProvince">

    <include android:id="@+id/toolbarFav"
        layout="@layout/toolbar"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textSize="36sp"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:text="FAVORITE"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="20dp"
        android:textSize="22sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:text="PROVINSI AND COUNTRY"/>

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rcPC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="30dp"
        android:paddingHorizontal="40dp"
        android:background="@drawable/province_country_rc_background"
        tools:listitem="@layout/prev_coutry_province_item"
        />

</LinearLayout>